packages:
  yum:
    git: []
    libicu-devel: []
    amazon-linux-extras: []
commands:
    01_postgres_activate:
        command: sudo amazon-linux-extras enable postgresql12
    02_postgres_install:
        command: sudo yum install -y postgresql-libs
    03_install_yarn:
        command: |
            set -e
            npm i -g yarn
            ln -s "$(npm bin --global)"/yarn /usr/bin/yarn
        test: "! yarn -v"
